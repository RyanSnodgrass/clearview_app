!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "ClearView Xray"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

    %meta{:content => "create from keywords", :name => "keywords"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    / Google Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Quicksand", :rel => "stylesheet", :type => "text/css"}/
    / CSS Files
    %link{:href => "style.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "menu/css/simple_menu.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    / Contact Form
    %link{:href => "contact_form/css/style.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "contact_form/css/uniform.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "contact_form/js/jquery.tools.js", :type => "text/javascript"}
    %script{:src => "contact_form/js/jquery.uniform.min.js", :type => "text/javascript"}
    %script{:src => "contact_form/js/main.js", :type => "text/javascript"}
    / JS Files
    %script{:src => "js/jquery.tools.min.js", :type => "text/javascript"}
    :javascript
      $(function() {
              $("#prod_nav ul").tabs("#panes > div", {effect: 'fade', fadeOutSpeed: 400});
          });
    :javascript
      $(document).ready(function(){
                  $(".pane-list li").click(function(){
                  window.location=$(this).find("a").attr("href");return false;
              });
          
          }); //close doc ready
  %body
    / = render "shared/menu"
    = yield
    = javascript_include_tag "application"